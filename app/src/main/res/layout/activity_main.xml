<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:text="Filter Gain (dB)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderGain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="-30.0"
        android:valueTo="15.0"
        android:value="0.0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Frequency (Hz)"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderFreq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="100.0"
        android:valueTo="10000.0"
        android:value="440.0"/>

    <com.google.android.material.button.MaterialButton
        style="@style/ThemeOverlay.Material3.Button.TonalButton"
        android:text="Activate"
        android:id="@+id/btnActivate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>