<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtBpm"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 BPM"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderBPM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="40.0"
        android:valueTo="240.0"
        android:layout_marginBottom="16dp"
        android:value="40.0"/>

    <LinearLayout
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="+"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMinus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="-"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        style="@style/ThemeOverlay.Material3.Button.TonalButton"
        android:text="Start"
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="50dp"
        android:text="Filter Gain (dB)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderGain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="-30.0"
        android:valueTo="15.0"
        android:value="0.0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Frequency (Hz)"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderFreq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="100.0"
        android:valueTo="10000.0"
        android:value="440.0"/>

</LinearLayout>